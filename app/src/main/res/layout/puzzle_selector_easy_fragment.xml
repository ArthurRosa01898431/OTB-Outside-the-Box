<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/puzzleSelectorEasyFragment"
    android:background="@color/background">


    <Button
        android:id="@+id/brightnessPuzzleSelecter"
        android:layout_width="84dp"
        android:layout_height="77dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="212dp"
        android:backgroundTint="@color/android_green"
        android:text="@string/select"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/filePuzzleSelecter"
        android:layout_width="84dp"
        android:layout_height="72dp"
        android:layout_marginTop="364dp"
        android:layout_marginEnd="244dp"
        android:backgroundTint="@color/android_green"
        android:text="@string/select"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/thirdPuzzleSelecter"
        android:layout_width="84dp"
        android:layout_height="77dp"
        android:layout_marginTop="440dp"
        android:layout_marginEnd="80dp"
        android:backgroundTint="@color/android_green"
        android:text="@string/select"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/puzzle1_Objective1"
        android:layout_width="84dp"
        android:layout_height="77dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="244dp"
        android:background="@drawable/button_outline"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/puzzle1_Objective2"
        android:layout_width="84dp"
        android:layout_height="77dp"
        android:layout_marginEnd="244dp"
        android:background="@drawable/button_outline"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/brightnessPuzzleSelecter" />

    <Button
        android:id="@+id/puzzle2_Objective1"
        android:layout_width="84dp"
        android:layout_height="77dp"
        android:layout_marginStart="80dp"
        android:background="@drawable/button_outline"
        android:text=""
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/filePuzzleSelecter" />

    <Button
        android:id="@+id/puzzle2_Objective2"
        android:layout_width="84dp"
        android:layout_height="77dp"
        android:layout_marginTop="436dp"
        android:background="@drawable/button_outline"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/puzzle3_Objective1"
        android:layout_width="84dp"
        android:layout_height="77dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/button_outline"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/thirdPuzzleSelecter" />

    <Button
        android:id="@+id/puzzle3_Objective2"
        android:layout_width="84dp"
        android:layout_height="77dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/button_outline"
        android:text=""
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/puzzle3_Objective1" />


</androidx.constraintlayout.widget.ConstraintLayout>